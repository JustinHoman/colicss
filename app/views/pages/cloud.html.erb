<% provide(:title, "Cloud") %>
<header>
  <nav class="container">
    <div class="left">
      <ul class="inline_ul"><li class="logo"><a href="" title="Terug naar de homepage">ColiCSS</a></li><ul>
    </div>

    <div class="right">
      <ul class="inline_ul">
        <li class="button"><%= link_to("Home", '/')%></li>
        <li class="button"><%= link_to("Hosting", '/hosting')%></li>
        <li class="button active"><%= link_to("Cloud", '/cloud')%></li>
        <li class="button"><%= link_to("Reviews", '/reviews')%></li>
        <li class="button"><%= link_to("Social", '/social')%></li>
        <li class="button"><%= link_to("Contact", '/contact')%></li>
      </ul>
    </div>
  </nav>
</header>

<main class="pakketten container">
  <div class="intro">
    <h2>Cloud pakketten</h2>
    <p>Hieronder kunt u de 3 cloud pakketten die wij aanbieden bekijken en met elkaar vergelijken.</p>
  </div>

  <div class="pakket pakket1 geel">
    <h3><%= @geel.name %></h3>
    <table class="left-text">
      <tr><th>Opslag</th><td><%= @geel.storage %> HDD</td></tr>
    </table>
    <br>
    <strong>€ <%= @geel.price %> per maand</strong>
    <br>
    <br>
    <p><%= link_to("Bestellen", '/hosting', :class => "button") %></p>
  </div>

  <div class="pakket pakket2 oranje">
    <h3><%= @oranje.name %></h3>
    <table class="left-text">
      <tr><th>Opslag</th><td><%= @oranje.storage %> HDD</td></tr>
    </table>
    <br>
    <strong>€ <%= @oranje.price %> per maand</strong>
    <br>
    <br>
    <p><%= link_to("Bestellen", '/hosting', :class => "button") %></p>
  </div>

  <div class="groen pakket pakket3">
    <h3><%= @groen.name %></h3>
    <table class="left-text">
      <tr><th>Opslag</th><td><%= @groen.storage %> HDD</td></tr>
    </table>
    <br>
    <strong>€ <%= @groen.price %> per maand</strong>
    <br>
    <br>
    <p><%= link_to("Bestellen", '/hosting', :class => "button") %></p>
  </div>
  <span class="strech"></span>
</main>
